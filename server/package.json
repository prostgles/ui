{
  "name": "prostgles-ui-server",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm i && cross-env NODE_ENV='production' NODE_OPTIONS='--max-old-space-size=2048' tsc && tsc-alias && npm prune --omit=dev",
    "start": "npm run build && node dist/server/src/index.js",
    "test": "npm run build && node --test dist/server/src/**/*.spec.js",
    "rollup": "rollup -c",
    "lint": "eslint . --ext .ts --quiet --fix",
    "dev": "npm i --no-audit && cross-env NODE_ENV='development' NODE_OPTIONS='--max-old-space-size=4048' concurrently --kill-others \"tsc -w\" \"tsc-alias -w\" \"nodemon  --delay 500ms --trace-warnings --inspect dist/server/src/index.js\"",
    "dev:electron": "npm i && cross-env NODE_ENV='development' NODE_OPTIONS='--max-old-space-size=4048' concurrently --kill-others \"tsc -w\" \"tsc-alias -w\" \"nodemon  --delay 500ms --trace-warnings --inspect dist/server/src/testElectron.js\""
  },
  "author": "",
  "license": "",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/lib-storage": "^3.940.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "@modelcontextprotocol/sdk": "^1.24.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/pidusage": "^2.0.5",
    "check-disk-space": "^3.3.1",
    "connection-string": "^4.4.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^5.2.1",
    "helmet": "^7.1.0",
    "otplib": "^12.0.1",
    "pidusage": "^4.0.1",
    "prostgles-server": "^4.2.343",
    "prostgles-types": "^4.0.89",
    "qrcode": "^1.5.1",
    "simple-git": "^3.27.0",
    "smtp-server": "^3.16.1",
    "socket.io": "^4.8.1",
    "typescript": "^5.8.3",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.4",
    "@types/node": "^22.15.2",
    "@types/smtp-server": "^3.5.10",
    "@types/ws": "^8.5.3",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "typescript-eslint": "^8.46.4"
  }
}
