{
  "files": ["lib/index.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "lib": [
      "es2019"
    ],
    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "./lib",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // "outFile": "bundle.js",
    // "moduleResolution": "node"
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "keyofStringsOnly": true
  },
  "exclude": [
  ],
}